<h3>Utvärdering för <%= @student.first_name%> <%=@student.last_name%></h3>



<p id="notice"><%= notice %></p>
<div class="report-field">
  <div class="report-field-header">ANLEDNING TILL UTREDNING</div>
  <div class="report-field-content">
    <%= @report.reason %>
  </div>
</div>

<div class="report-field">
  <div class="report-field-header">LÄRARENS ERFARENHET</div>
  <div class="report-field-content">
  <%= @report.teacher_experience %>
  </div>
</div>
<div class="report-field">
  <div class="report-field-header">Elevens ERFARENHET</div>
  <div class="report-field-content">
  <%= @report.student_experience %>
  </div>
</div>
<div class="report-field small-field<% if @report.evaluation_date < Time.now %> bs-callout bs-callout-danger <% end -%>">
  <div class="report-field-header">Datum för utvärdering <% if @report.evaluation_date < Time.now %> <span class="report-danger">(Utvärderingsdatum är överskridet!)</span><% end -%></div>
  <div class="report-field-content">

   <%= @report.evaluation_date %>
  </div>
</div>




<p>
  <strong>Updated:</strong>
<% if @report.updated?%>
  Utredningen är ännu inte utvärderad.
  <%else%>
  Utredningen är updaterad.
</p>
<% end -%>
<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>